{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "AoC Solutions Schema",
  "type": "object",
  "required": ["user"],
  "properties": {
    "user": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["userName", "solutions"],
        "properties": {
          "userName": { "type": "string" },
          "solutions": {
            "type": "array",
            "minItems": 0,
            "items": {
              "type": "object",
              "required": ["day"],
              "properties": {
                "day": { "type": "integer" },
                "writeUp": {
                  "type": "string",
                  "pattern": "^http?:\/\/.+"
                },
                "solution1": {
                  "type": "string",
                  "pattern": "^http?:\/\/.+"
                },
                "solution2": {
                  "type": "string",
                  "pattern": "^http?:\/\/.+"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

